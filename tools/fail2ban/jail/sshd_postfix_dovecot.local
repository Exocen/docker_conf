[sshd]
enabled = true
port = all
filter = sshd
backend = systemd
ignoreip = 127.0.0.1

[postfix]
enabled = true
chain = DOCKER-USER
mode    = more
port = all
backend = systemd

[postfix-rbl]
enabled = true
chain = DOCKER-USER
port = all
backend = systemd

[dovecot]
enabled = true
chain = DOCKER-USER
port = all
backend = systemd

[postfix-sasl]
enabled = true
chain = docker-user
port = all
backend = systemd

