[nginx-http-auth]
enabled = true
filter = nginx-http-auth
port = http,https
logpath = /var/log/nginx/error.log  ; Or your Nginx error log path
maxretry = 3  ; Number of failed attempts before banning
bantime = 3600 ; Ban duration in seconds (e.g., 1 hour)
findtime = 600 ; Time window to count failed attempts (e.g., 10 minutes)
